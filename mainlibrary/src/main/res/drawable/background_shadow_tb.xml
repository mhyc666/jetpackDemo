<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow   android:drawable="@mipmap/oder_s_3"-->
    <item>
        <shape android:shape="rectangle">

            <!-- from top to bottom  android:centerColor="#bbbbbb"-->
            <gradient
                android:angle="90"
                android:endColor="@color/gery_small"
                android:startColor="@color/gery_small" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- content -->
    <item  android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>